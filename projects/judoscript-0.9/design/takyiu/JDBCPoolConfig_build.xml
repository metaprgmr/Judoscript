<?xml version="1.0" encoding="UTF-8" ?>
<project name="test_prj" default="jdbc_pool_creation" basedir=".">

<target name="jdbc_pool_creation">
	<wlconfig url="t3://localhost:7001" username="system" password="weblogic">
		<query domain="JavaOneDomain" type="Server" name="managed" property="currentServer"/>
		<create type="JDBCConnectionPool" name="myPool" property="currentPool">      
			<set attribute="DriverName" value="com.pointbase.jdbc.jdbcUniversalDriver"/>      
			<set attribute="MaxCapacity" value="5"/>      
			<set attribute="Password" value="PBPUBLIC"/>      
			<set attribute="Properties" value="user=PBPUBLIC"/>      
			<set attribute="URL"  value="jdbc:pointbase:server://localhost/demo"/>      
			<set attribute="Targets" value="${currentServer}"/>   
		</create>
	</wlconfig>
</target>

</project>